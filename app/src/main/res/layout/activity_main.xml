<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <ImageView
        android:layout_marginTop="100dp"
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:background="@drawable/hamburguer"
        android:layout_gravity="center"/>
    <ImageView
        android:layout_marginTop="-20dp"
        android:id="@+id/txtnome"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/imgSplash"
        android:layout_centerHorizontal="true"
        android:background="@drawable/nome"
        android:layout_gravity="center"/>

    <EditText
        android:layout_marginTop="9dp"
        android:layout_width="300dp"
        android:layout_height="50dp"
      android:layout_gravity="center"
        android:background="@color/yel"
        android:hint="E-mail"
        android:gravity="center"
        android:textColor="@color/black"/>

    <EditText
        android:layout_marginTop="9dp"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:background="@color/yel"
        android:hint="Senha"
        android:gravity="center"
        android:textColor="@color/black"/>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:background="@drawable/botao_vermelho"
        android:text="Entrar"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="3dp">


        <TextView
            android:layout_marginLeft="120dp"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Crie uma conta."
            android:textColor="@color/black"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Clique aqui."
            android:textColor="@color/red"
            android:id="@+id/cliqueAqui"/>

    </LinearLayout>




</LinearLayout>